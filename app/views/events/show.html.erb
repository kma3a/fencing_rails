<table>
  <thead>
    <th> Name</th>
    <th> #</th>
    <% (1..@event.participant_count).each do |x| %>
      <th><%= x%></th>
    <%end%>
    <th> V </th>
    <th> TS </th>
    <th> TR </th>
    <th> Ind </th>
    <th> Pl </th>
  </thead>
  <% @event.participants.each do |part| %>
  <tr>
    <td> <%= part.student.name %></td>
    <td> <%= part.bout_number %> </td>
     <% (1..@event.participant_count).each_with_index do |x| %>
      <td><%=x %></td>
    <%end%>
    <td> <%= part.victories %></td>
    <td> <%= part.touches_scored %></td>
    <td> <%= part.touches_recieved %></td>
    <td> <%= part.indicator %></td>
  </tr>
  <%end%>
</table>
