<table>
<td>
<%= @part1.student.name%></br>
<%= number_field(:participant1, :bout_points, in: 0..5, default: 0)%></br>
<%= label_tag(:victory)%>
<%= radio_button_tag(:victory, "1")%>
</td>
<td>
<%= @part2.student.name%></br>
<%= number_field(:participant2, :bout_points, in: 0..5)%> </br>
<%= label_tag(:victory)%>
<%= radio_button_tag(:vicotry, "2")%>
</td>
</table>
<%= submit_tag("Submit")%>
<%end%>
