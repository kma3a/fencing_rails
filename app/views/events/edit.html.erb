<h1>Edit Event</h1>
<p>This Event has <%=@event.participant_count%> participants this cannot change</p>

<%= form_for [@team,@event] do |f| %>
  <%= f.label :event_title %></br>
  <%= f.text_field :event_title%> </br>
  <ol>
  <% @event.participants.each do |part| %>
     <li><input type='text' name='event[participants][]' value="<%=part.student.secret_key%>" required='true'></li>
  <%end%>
  </ol>
  <%= f.submit "Update Event", :class => 'button'%>
<%end%>


<div class="team-students">
<h3>Team <%=@team.name%>'s students</h3>
<table>
  <thead>
    <td>Name</td>
    <td>Key</td>
  </thead>
  <% @team.students.each do |student| %>
  <tr>
    <td><%= student.name%></td>
    <td><%= student.secret_key%></td>
  </tr>
  <%end%>
</table>
</div>
